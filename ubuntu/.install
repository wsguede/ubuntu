# This is to add some wanted stuff!

wget https://raw.githubusercontent.com/robbyrussell/oh-my-zsh/master/tools/install.sh -O - | sudo -E bash -

#update and upgrade the system before we install anything.
sudo apt-get update
sudo apt-get upgrade -y

#add some dope stuff
# git
# node
# xclip -- send thing to the clipboard
# http --
sudo apt-get install -y \
  git \
  nodejs npm \
  xclip \
  httpie

sudo apt-get autoremove -y
sudo apt-get clean
